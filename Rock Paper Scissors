import random

x = ["yes", "no"]
game = ["rock","paper","scissors"]
player_score = 0
computer_score = 0
rounds = 0
P = True
while True:
     y = input("Computer Computer : Would You Like To Play This Game?\nYes Or No?\nYou : ").lower()
     if y in x :
        break
     else:
        print("Computer : Please Answer Yes Or No Only\nYou : ")
        continue
if y == 'yes':
  rounds = int(input("Computer : Please Enter Number Of Rounds\nYou : "))
i= 0
while P == True and i < rounds:
    print("\nRound Number :-",i+1,"\n")
    player_response = str(input("Computer : Please Enter Rock Paper or Scissors\n(Or Enter Quit to Quit the Game and Display Results)\nYou : ")).lower()
    if player_response in game:
      computer_response = random.choice(game)
      print("\nComputer :",computer_response)
      print("Player :",player_response)
      if player_response == computer_response:
       print("It's A Tie")
       i+=1
      elif player_response == "rock" and computer_response == "paper":
        print("Computer Wins")
        computer_score += 1
        i+=1
      elif player_response == "scissors" and computer_response == "rock":
        print("Computer Wins")
        computer_score += 1
        i+=1
      elif player_response == "paper" and computer_response == "scissors":
        print("Computer Wins")
        computer_score += 1
        i+=1
      else:
        print("Player Wins")
        player_score += 1
        i+=1
    elif player_response == "quit":
      x = False
      break
    else:
        print("Computer : Please Enter A Valid Response\n ")
        continue
if y == 'no':
  i = 0
  rounds = 0
  P = False
  print("Alright! Have a Great Day")
  exit()

print("\nSCOREBOARD\n")
print("Total Rounds",i)
print("Player Score :",player_score)
print("Computer Score :",computer_score)
if player_score > computer_score:
  print("Player Has Won By",player_score - computer_score,"Points")
elif player_score < computer_score:
  print("Computer Has Won By",computer_score - player_score,"Points")
else:
  print("It's A Tie") 
